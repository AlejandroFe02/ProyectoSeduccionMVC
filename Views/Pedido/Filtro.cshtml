@model List<Pedido>

<div class="modal fade" id="miModal" tabindex="-1" aria-labelledby="miModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <!--Encabezado del modal-->
                <h5 class="modal-title" id="miModalLabel">Lista de Productos sin Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <!--Cuerpo del modal, contenido de la tabla-->
                <table class="table">
                    <thead class="table-danger">
                        <tr>
                            <th scope="col">IdDistribuidor</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Precio por Docena</th>
                            <th scope="col">ID Distribuidor</th>
                            <th scope="col">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-dark">
                                <td>@item.PedidoId</td>
                                <td>@item.Nombre</td>
                                <td>@item.Marca</td>
                                <td>@item.Stock</td>
                                <td>@item.PrecioDocena</td>
                                <td>@item.IdDistribuidor</td>
                                <td>
                                    <input type="checkbox" name="productoSeleccionado" value="@item.PedidoId" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <!--Pie del Modal-->
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>