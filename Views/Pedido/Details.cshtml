@model Pedido
@{
    ViewData["Title"] = "Detalles del producto";
}
<h1>@ViewData["Title"]</h1>

<form method="post">

    <div class="mb-3">
        <label class="form-label">Codigo</label>
        <input asp-for="PedidoId" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Id Distribuidor</label>
        <input asp-for="IdDistribuidor" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input asp-for="Marca" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <input asp-for="Tipo" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Precio Docena</label>
        <input asp-for="PrecioDocena" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Precio de Venta</label>
        <input asp-for="PrecioVentaUnid" class="form-control" disabled>
    </div>

    <div class="row col-6">
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-primary">Regresar</a>
        </div>

    </div>
</form>

<p>Esta pagina se visualiza los detalles de cada producto de ropa en lista de pedido</p>